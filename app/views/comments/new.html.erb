<h2>Add a Comment</h2>

<%= form_with(model: [@commentable, @comment], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', @commentable %>



